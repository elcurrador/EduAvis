<Window x:Class="EduAvis.Frontend.Windows.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfGif="http://wpfanimatedgif.codeplex.com"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="600" Height="400"
        ShowInTaskbar="False" Topmost="True">

    <Border Background="#1E2B38" CornerRadius="15" Padding="30">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Width="150" Margin="0,0,0,30"
                       wpfGif:ImageBehavior.AnimatedSource="pack://application:,,,/Resource/Image/EduAvisMovement.gif"/>

                <TextBlock Text="EDU AVÍS" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,5"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Educational Management System" 
                           FontSize="18" 
                           FontStyle="Italic" 
                           Foreground="#66BFFF" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
